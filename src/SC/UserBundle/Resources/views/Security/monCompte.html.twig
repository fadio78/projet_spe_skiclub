{# src/SC/UserBundle/Resources/views/Security/monCompte.html.twig #}

{% extends "SCUserBundle::layout.html.twig" %}

{% block user_body %}
    <h1> email primaire :{{nom}}<h1/>
    <h4><a href="{{ path('sc_enfant_ajouter') }}">Ajouter un Enfant</a><h4/>
    <h4><a href="{{ path('sc_user_ajouter') }}">Ajouter utilisateur secondaire</a><h4/>
   
        {% if is_granted('ROLE_ADMIN') %}
            <h4><a href="{{ path('sc_admin_homepage') }}">Gestion Activité/utilisateur</a><h4/> 
        {%else%}
            <h4><a href="{{ path('sc_activite_homepage') }}">Liste des activités proposées</a><h4/>
        {% endif %}
        

    <h4> Enfant(s) inscrit(s) :
        <ul> {% for enfant in listEnfants %}
                <li>{{ enfant.prenomEnfant }} </li>
            {% endfor %}
        </ul>
     <h4/>
   <h4><a href="{{ path('sc_activite_listeEnfantsInscrits') }}">Liste de mes enfants inscrits aux activités</a><h4/>
   <h3><p>
    {# On affiche tous les messages flash dont le nom est « info » #}
      {% for message in app.session.flashbag.get('info') %}
        <p>{{ message }}</p>
      {% endfor %}
  </p>
  </h3>  
      {%if app.session.get('mesInscriptions') is defined %}
      Vos inscriptions:<br/>
      {%for mesInscription in app.session.get('mesInscriptions') %}
          
          {{ mesInscription.nomEnfant }} - {{ mesInscription.dateSortie }} - {{ mesInscription.prenomEnfant }}
           {%if mesInscription.participation == 0%}
               non confirmée
           {%else%}
               confirmée
           {%endif%}  
           <br/>
      {%endfor%}
   
   {%else%} 
      <h2><a href="{{ path('sc_activite_homepage') }}">Mes Inscriptions</a><h2/> 
   {%endif%}
{% endblock %}

