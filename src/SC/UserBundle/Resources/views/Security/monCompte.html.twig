{# src/SC/UserBundle/Resources/views/Security/monCompte.html.twig #}

{% extends "SCUserBundle::layout.html.twig" %}

{% block user_body %}
    <p><b> Adresse e-mail</b> : {{nom}}</p>
    <h4><a href="{{ path('sc_enfant_ajouter') }}">Ajouter un Enfant</a><h4/>
    <h4><a href="{{ path('sc_user_ajouter') }}">Ajouter utilisateur secondaire</a><h4/>
   
        {% if is_granted('ROLE_ADMIN') %}
            <h4><a href="{{ path('sc_admin_homepage') }}">Gestion Activité/utilisateur</a><h4/> 
        {%else%}
            <h4><a href="{{ path('sc_activite_homepage') }}">Liste des activités proposées</a><h4/>
        {% endif %}
        

    <h4> Enfant(s) inscrit(s) :
        <ul> {% for enfant in listEnfants %}
                <li>{{ enfant.prenomEnfant }} </li>
            {% endfor %}
        </ul>
     <h4/>
   {%if voirActivite is not defined %}    
   <h4><a href="{{ path('sc_activite_voirActivite') }}">Liste de mes inscriptions</a><h4/>
   {%endif%}    
   <h3><p>
    {# On affiche tous les messages flash dont le nom est « info » #}
      {% for message in app.session.flashbag.get('info') %}
        <p>{{ message }}</p>
      {% endfor %}
  </p>
    
    {%if voirActivite is defined and voirActivite == 1 %}
          {{ form(form) }}
    {%endif%}    
  
  </h3>  

{% endblock %}

