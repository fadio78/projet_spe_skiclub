{# src/SC/ActiviteBundle/Resources/views/index.html.twig #}
{% extends "SCActiviteBundle:Activite:layout.html.twig" %}
{% block title %}{{ parent() }} - Index{% endblock %}
{% block activité_body %}
    <h3> {{ activite.nomActivite }} </h3> <br/>
    <ul>
         Sortie le <b> {{ app.session.get('sortie').dateSortie }} </b> à <b> {{ app.session.get('sortie').lieu.nomLieu}} </b> <br/>
       
        Cliquer sur un des enfants l'inscrira automatiquement à la sortie
        <br/><br/>
        <ul>
            {% for enfant in enfants %}
                <a href="{{path('sc_activite_inscrireEnfant', {'id': activite.id, 
                                 'nomEnfant': enfant.nomEnfant, 'prenomEnfant': enfant.prenomEnfant}) }}"                 
                </a><br/>
                {{ enfant.nomEnfant }}
            {%endfor%}  
        </ul>    
    </ul> 
    <br/><br/> 
    <a href="{{ path('sc_activite_view', {'id': activite.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    
{% endblock %} 