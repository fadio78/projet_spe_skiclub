{# src/SC/ActiviteBundle/Resources/views/Activite/index.html.twig #}
{% extends "SCActiviteBundle:Activite:layout.html.twig" %}
{% block title %}{{ parent() }} - Index{% endblock %}
{% block activité_body %}
<ul>

  <p>
    {# On affiche tous les messages flash dont le nom est « info » #}
    <FONT color="green">  {% for message in app.session.flashbag.get('info') %}
        <p>{{ message }}</p> 
      {% endfor %} </FONT>
  </p>

  <center> <center><h2> Saison: {{ app.session.get('year') }} </h2> </center> </center>

    {% for activite in listeActivites %}
        <h4>  <a href="{{ path('sc_activite_view', {'id': activite.id}) }}">
          {{ activite.nomActivite }}

            </a>  <h4/>
        
    {% endfor %}
        <br>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('sc_activite_add')}}" class="btn btn-default">
               <i class="glyphicon glyphicon-plus-sign"></i>
            Ajouter une activité
            </a>
        {% endif %}
        
                   

</ul> 
        

 
{% endblock %} 

