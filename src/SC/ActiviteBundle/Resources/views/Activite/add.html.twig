{# src/SC/ActiviteBundle/Resources/views/Activite/add.html.twig #}
{% extends "SCActiviteBundle:Activite:layout.html.twig" %}
{% block title %}
  Ajouter une activité - {{ parent() }}
{% endblock %}


{% block activité_body %}
    
    
   {% if is_granted('ROLE_ADMIN') %}
       
  <p>
    {# On affiche tous les messages flash dont le nom est « info » #}
    <FONT color="red">  {% for message in app.session.flashbag.get('info') %}
        <p>{{ message }}</p> 
      {% endfor %} </FONT>
  </p>
   <p> Si la licence de l'activité n'existe pas ci-dessous veuillez d'abord l'ajouter </p> 
    <a href="{{ path('sc_licence_add')}}"class="btn btn-default">
      <i class="glyphicon glyphicon-plus-sign"></i>
      Ajouter une licence
    </a>
  {{ include("SCActiviteBundle:Activite:form.html.twig") }}
  {% endif %}
 
{% endblock %} 


